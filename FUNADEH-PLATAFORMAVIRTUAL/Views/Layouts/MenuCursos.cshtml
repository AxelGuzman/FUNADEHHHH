
@{
    ViewBag.Title = "MenuCursos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading ">
    <div class="col-sm-2">
        <h2>Cursos</h2>
        <ol class="breadcrumb"></ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-2">
            <a href=@Url.Action("Talleres","Talleres") id="btnMenuCursos">
                <div class="widget red-bg">
                    <div class="row">
                        <div class="col-4 text-center">
                            <i class="fa fa-briefcase fa-5x"></i>
                            <h3 class="m-xs"><b>Talleres</b></h3>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-lg-2">
            <a href=@Url.Action("Evaluaciones", "Evaluaciones") id="btnEvaluaciones">
                <div class="widget navy-bg">
                    <div class="row">
                        <div class="col-3 text-center">
                            <i class="fa fa-check-square-o fa-5x"></i>
                            <h3 class="m-xs"><b>Evaluaciones</b></h3>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-sm-2">
            <a href=@Url.Action("Asignaciones", "Asignaciones") id="btnEvaluaciones">
                <div class="widget yellow-bg ">
                    <div class="row">
                        <div class="col-3 text-center">
                            <i class="fa fa-book fa-5x"></i>
                            <h3 class="m-xs"><b>Asignaciones</b></h3>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-lg-2">
            <a href=@Url.Action("MaterialDidactico", "MaterialDidactico") id="btnEvaluaciones">
                <div class="widget blue-bg">
                    <div class="row">
                        <div class="col-3 text-center">
                            <i class="fa fa-folder-o fa-5x"></i>
                            <h3 class="m-xs"><b>Material </b></h3>
                        </div>
                    </div>
                </div>
            </a>
        </div>



    </div>
</div>
