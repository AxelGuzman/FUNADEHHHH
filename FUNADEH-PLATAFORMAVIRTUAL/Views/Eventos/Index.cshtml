@model IEnumerable<FUNADEH_PLATAFORMAVIRTUAL.Models.tbEventos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>tbEventos</h2>
        <ol class="breadcrumb">
            <li class="active">
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de tbEventos</h5>
                    <div class="ibox-tools">
                       @Html.ActionLink("Registrar tbEventos", "Create", null, new { @class = "btn btn-primary btn-xs"})
                    </div>
                </div>
                <div class="ibox-content">
                  <table class="table table-striped table-bordered table-hover dataTables-example" id="IndexTable">
                    <thead>
                        <tr role="row">
                            <th>@Html.DisplayNameFor(model => model.even_Descripcion)</th>
                            <th>@Html.DisplayNameFor(model => model.even_Estado)</th>
                            <th>@Html.DisplayNameFor(model => model.even_FechaCrea)</th>
                            <th>@Html.DisplayNameFor(model => model.even_FechaModifica)</th>
                            <th>@Html.DisplayNameFor(model => model.tbUsuarios.usu_NombreUsuario)</th>
                            <th>@Html.DisplayNameFor(model => model.tbUsuarios1.usu_NombreUsuario)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                      @foreach (var item in Model) {
                        <tr class="gradeA odd" role="row" data-id="@item.even_Id">
                            <td>
                                @Html.DisplayFor(modelItem => item.even_Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.even_Estado)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.even_FechaCrea)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.even_FechaModifica)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbUsuarios.usu_NombreUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbUsuarios1.usu_NombreUsuario)
                            </td>
                            <td>
                              @Html.ActionLink("Detalles", "Details", new { id=item.even_Id },  new {@class = "btn btn-primary btn-xs" })
                              @Html.ActionLink("Editar", "Edit", new { id=item.even_Id }, new {@class = "btn btn-default btn-xs" })
                            </td>
                        </tr>
                      }
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
 </div>
    
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
  @Scripts.Render("~/plugins/dataTables")
}
