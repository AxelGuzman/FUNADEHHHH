
@{
    ViewBag.Title = "Cursos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox">
        <div class="ibox-title">
            <h5>Asignación de Cursos</h5>
            <div class="ibox-tools">
                <a href=@Url.Action("Solicitudes","Solicitudes")><input type="button" class="btn btn-default btn-xs" value="Volver" /></a>
            </div>
        </div>
        <div class="ibox-content">
            <div class="row">
                <div class="col-md-4">
                    <select class="select2_demo_1 form-control select2-hidden-accessible" tabindex="-1" aria-hidden="true">
                        <option value="1">Option 1</option>
                        <option value="2">Option 2</option>
                        <option value="3">Option 3</option>
                        <option value="4">Option 4</option>
                        <option value="5">Option 5</option>
                        </select>
           </div>
                <div>
                        <input type="button" class="btn btn-success btn-xs" value="Agregar" />
                </div>
                <br /><br />
                <div class="ibox-title">
                    <h5>Listado de Cursos</h5>
                </div>
                <div class="col-md-12">
                    <table class="table table-striped table-bordered table-hover dataTables-example" id="IndexTable">
                        <thead>
                            <tr role="row">
                                <th>Nombre del Curso</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        <td>Inteligencia Emocional</td>
                        <td>
                            <input type="button" id="btnRemover" class="btn btn-danger btn-xs" value="Remover" />
                        </td>
                        </tbody>
                    </table>
                </div>
    </div>
    </div>
</div>
</div>
